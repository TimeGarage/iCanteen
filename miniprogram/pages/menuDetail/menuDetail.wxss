/* 闲暇时光小厨房详情页 */
/* 头部 */
.menuDetail .main{
  padding: 0 26rpx;
}
.menuDetail .title_img{
  width: 100%;
}
.menuDetail .favourate-img {
  width: 35rpx;
  height: 35rpx;
  float: right;
  margin-top: 10rpx;
}
.menuDetail .addcomment-img {
  width: 40rpx;
  height: 40rpx;
  float: right;
  margin-top: 10rpx;
}
.menuDetail .title{
  text-align: center;
  color: #89C3EB;
  font-size: 38rpx;
  margin-bottom: 20rpx;
}
.menuDetail .des{
  color: #999;
  font-size: 26rpx;
}
/* 材料 */
.menuDetail .ingredient{
  margin-top: 22rpx;
}
.ingredient_title{
  margin-bottom: 22rpx;
}
.menuDetail .ingredient_info{
  border-bottom: 1px dashed #89C3EB;
  overflow: hidden;
  color: #666;
  font-size: 30rpx;
  margin-bottom: 16rpx;
  padding: 10rpx;
}
.menuDetail .ingredient_info .left{
  float: left;
}
.menuDetail .ingredient_info .right{
  float: right;
}
/* 做法 */
.menuDetail .step{
  margin-top: 32rpx;
  margin-bottom: 22rpx;
}
.menuDetail .step_detail .step_des{
  color: #666;
  font-size: 28rpx;
  margin: 20rpx;
}
.menuDetail .step_detail image{
  width: 100%;
  border-radius: 20rpx;
}
.recommend .recommend_list{
  padding: 15rpx;
  
}
.recommend .recommend_list .list{
  /* background: pink; */
  border: 1rpx solid  rgb(145, 162, 173);
  border-radius: 10rpx;
  overflow: hidden;
  height: 100%;
  box-shadow: 10rpx 10rpx 10rpx  rgb(145, 162, 173);
  margin-bottom: 30rpx;
}
.recommend .recommend_list .list .list_l{
  float: left;
  /* background: pink; */
}
.recommend .recommend_list .list .list_l image{
  height: 180rpx;
  width: 200rpx;
}
.recommend .recommend_list .list .list_r{
  height: 100%;
  overflow: hidden;
  /* background: skyblue; */
  padding: 10rpx;
  box-sizing: border-box;

}
.recommend .recommend_list .list .list_r .r_title{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
  margin-bottom: 15rpx;
}
.recommend .recommend_list .list .list_r .des{
  font-size: 25rpx;
  overflow : hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 15rpx;
}
.goods-text {
  padding: 0 10rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 56rpx;
  margin-bottom: 30rpx;
  display: inline-block;
  position: relative;
  overflow: hidden;
}
.recommend .recommend_list .list .list_r .bom{
  font-size: 25rpx;
  overflow: hidden;
}
.recommend .recommend_list .list .list_r .bom .look{
  float: left;
}
.recommend .recommend_list .list .list_r .bom .collect{
  float: right;
} 
